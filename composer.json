{
    "name": "codemountain/mobile-lottie-form",
    "description": "Display native Lottie animation overlays from PHP/Livewire for success feedback, loading states, and celebrations",
    "type": "nativephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "CodeMountain",
            "email": "support@codemountain.ca"
        }
    ],
    "require": {
        "php": "^8.2",
        "nativephp/mobile": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CodeMountain\\LottieForm\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CodeMountain\\LottieForm\\LottieFormServiceProvider"
            ]
        },
        "nativephp": {
            "manifest": "nativephp.json"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
